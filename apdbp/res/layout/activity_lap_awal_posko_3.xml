<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_repeating" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/lpa"
                android:textAppearance="?android:attr/textAppearanceLarge" />
			<!-- 
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="@string/posko"
                android:textAppearance="?android:attr/textAppearanceMedium" /> -->

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="16dp"
                android:text="@string/pendataan_pengungsi" 
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:text="@string/jumlah_kk_mengungsi" 
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editTextJumlahKKMengungsi"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/jumlah_kk_mengungsi"
                android:inputType="number"
                android:gravity="center" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/editTextJumlahKKMengungsi"
                android:layout_centerHorizontal="true"
                android:text="@string/jumlah_pria_mengungsi" />

            <EditText
                android:id="@+id/editTextJumlahPriaMengungsi"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/jumlah_pria_mengungsi" 
                android:inputType="number"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/editTextJumlahPriaMengungsi"
                android:layout_centerHorizontal="true"
                android:text="@string/jumlah_wanita_mengungsi" />

            <EditText
                android:id="@+id/editTextJumlahWanitaMengungsi"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/jumlah_wanita_mengungsi"
                android:inputType="number" 
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/editTextJumlahWanitaMengungsi"
                android:layout_centerHorizontal="true"
                android:text="@string/jumlah_balita_mengungsi" />

            <EditText
                android:id="@+id/editTextJumlahBalitaMengungsi"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/jumlah_balita_mengungsi" 
                android:inputType="number"
                android:gravity="center"/>

            <Button
                android:id="@+id/buttonLanjut"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextJumlahBalitaMengungsi"
                android:layout_alignParentRight="true"
                android:text="@string/kirim"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:textColor="#FFFFFF"
				android:textSize="16sp"
				android:background="@drawable/buttonselector"
				android:shadowColor="#A8A8A8"
				android:shadowDx="0"
				android:shadowDy="0"
				android:shadowRadius="5" />

            <Button
                android:id="@+id/buttonKembali"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/editTextJumlahBalitaMengungsi"
                android:text="@string/kembali"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:textColor="#FFFFFF"
				android:textSize="16sp"
				android:background="@drawable/buttonselector"
				android:shadowColor="#A8A8A8"
				android:shadowDx="0"
				android:shadowDy="0"
				android:shadowRadius="5" />

        </RelativeLayout>

</ScrollView>