<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/bg_repeating">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/lbp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="@string/bencana"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/buttonKembali"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/editTextRencanaTidakLanjut"
                android:text="@string/kembali"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:textColor="#FFFFFF"
				android:textSize="16sp"
				android:background="@drawable/buttonselector"
				android:shadowColor="#A8A8A8"
				android:shadowDx="0"
				android:shadowDy="0"
				android:shadowRadius="5" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="@string/sumber_daya" />

            <EditText
                android:id="@+id/editTextSumberDaya"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:gravity="left|top"
                android:inputType="textCapSentences|textMultiLine" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextSumberDaya"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:text="@string/kendala" />

            <EditText
                android:id="@+id/editTextKendala"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:gravity="left|top"
                android:inputType="textCapSentences|textMultiLine" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextKendala"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:text="@string/kebutuhan_mendesak" />

            <EditText
                android:id="@+id/editTextKebutuhan"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:gravity="left|top"
                android:inputType="textCapSentences|textMultiLine" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/editTextKebutuhan"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:text="@string/rencana_tidak_lanjut" />

            <EditText
                android:id="@+id/editTextRencanaTidakLanjut"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView6"
                android:ems="10"
                android:gravity="left|top"
                android:inputType="textCapSentences|textMultiLine" />

            <Button
                android:id="@+id/buttonKirimCatatan"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextRencanaTidakLanjut"
                android:layout_alignParentRight="true"
                android:text="@string/kirim"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                
                android:textColor="#FFFFFF"
				android:textSize="16sp"
				android:background="@drawable/buttonselector"
				android:shadowColor="#A8A8A8"
				android:shadowDx="0"
				android:shadowDy="0"
				android:shadowRadius="5" />

        </RelativeLayout>

</ScrollView>