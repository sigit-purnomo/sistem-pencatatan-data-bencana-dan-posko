<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:background="@drawable/bg_repeating">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
           >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/lpp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextIDPetugas"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="@string/posko"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="@string/masukan_id_posko" />

            <EditText
                android:id="@+id/editTextIDPosko"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/id_posko"
                android:inputType="number" >
                
                </EditText>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/editTextIDPosko"
                android:layout_marginTop="15dp"
                android:text="@string/pendataan_posko" 
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/kapasitas_posko" />

            <EditText
                android:id="@+id/editTextKapasitasPosko"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView3"
                android:ems="10"
                android:hint="@string/kapasitas_posko"
                android:inputType="number" 
                android:gravity="center"/>
            
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextKapasitasPosko"
                android:layout_centerHorizontal="true"
                android:text="@string/jumlah_fas_dapur" 
                android:layout_marginTop="10dp"/>
            
            <EditText
                android:id="@+id/editTextJumlahFasilitasDapur"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/jumlah_fas_dapur" 
                android:inputType="number"
                android:gravity="center"/>
            
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextJumlahFasilitasDapur"
                android:layout_centerHorizontal="true"
                android:text="@string/jumlah_fas_kesehatan"
                android:layout_marginTop="10dp" />
            
            <EditText
                android:id="@+id/editTextJumlahFasilitasKesehatan"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/jumlah_fas_kesehatan"
                android:inputType="number" 
                android:gravity="center"/>
            
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextJumlahFasilitasKesehatan"
                android:layout_centerHorizontal="true"
                android:text="@string/jumlah_fas_mck" 
                android:layout_marginTop="10dp"/>
            
            <EditText
                android:id="@+id/editTextJumlahFasilitasMCK"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/jumlah_fas_mck"
				android:inputType="number"
				android:gravity="center"/>

            <Button
                android:id="@+id/buttonBatal"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/editTextJumlahFasilitasMCK"
                android:text="@string/batal" 
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:textColor="#FFFFFF"
				android:textSize="16sp"
				android:background="@drawable/buttonselector"
				android:shadowColor="#A8A8A8"
				android:shadowDx="0"
				android:shadowDy="0"
				android:shadowRadius="5"/>

            <Button
                android:id="@+id/buttonLanjut"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextJumlahFasilitasMCK"
                android:layout_alignParentRight="true"
                android:text="@string/lanjut"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp" 
                android:textColor="#FFFFFF"
				android:textSize="16sp"
				android:background="@drawable/buttonselector"
				android:shadowColor="#A8A8A8"
				android:shadowDx="0"
				android:shadowDy="0"
				android:shadowRadius="5"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="16dp"
                android:text="@string/petugas"
                android:layout_centerHorizontal="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="@string/masukan_id_petugas" />

            <EditText
                android:id="@+id/editTextIDPetugas"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView10"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:hint="@string/id_petugas"
                android:ems="10"
                android:inputType="number" > <requestFocus /></EditText>

        </RelativeLayout>

</ScrollView>