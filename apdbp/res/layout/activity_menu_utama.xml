<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="520dp" 
        android:background="@drawable/bg_repeating">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="@string/title_2"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:text="@string/menu"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/buttonLapBencana"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/lap_bencana" 
            
            android:textColor="#FFFFFF"
			android:textSize="16sp"
			android:background="@drawable/buttonshape"
			android:shadowColor="#A8A8A8"
			android:shadowDx="0"
			android:shadowDy="0"
			android:shadowRadius="5" />

        <Button
            android:id="@+id/buttonLapPosko"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonLapBencana"
            android:layout_alignRight="@+id/buttonLapBencana"
            android:layout_below="@+id/buttonLapBencana"
            android:text="@string/lap_posko"
            android:layout_marginTop="10dp"
            
            android:textColor="#FFFFFF"
			android:textSize="16sp"
			android:background="@drawable/buttonshape"
			android:shadowColor="#A8A8A8"
			android:shadowDx="0"
			android:shadowDy="0"
			android:shadowRadius="5" />
		
        <Button
            android:id="@+id/buttonSetting"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonLapBencana"
            android:layout_alignRight="@+id/buttonLapBencana"
            android:layout_below="@+id/buttonLapPosko"
            android:text="@string/setting" 
             android:layout_marginTop="10dp"
            
            android:textColor="#FFFFFF"
			android:textSize="16sp"
			android:background="@drawable/buttonshape"
			android:shadowColor="#A8A8A8"
			android:shadowDx="0"
			android:shadowDy="0"
			android:shadowRadius="5"/>

        <Button
            android:id="@+id/buttonKeluar"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonSetting"
            android:layout_alignRight="@+id/buttonSetting"
            android:layout_below="@+id/buttonSetting"
            android:text="@string/keluar" 
             android:layout_marginTop="10dp"
            
            android:textColor="#FFFFFF"
			android:textSize="16sp"
			android:background="@drawable/buttonshape"
			android:shadowColor="#A8A8A8"
			android:shadowDx="0"
			android:shadowDy="0"
			android:shadowRadius="5"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="32dp"
            android:contentDescription="@string/icon"
            android:src="@drawable/iconbpbpd" 
            android:layout_marginRight="-30dp"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignTop="@+id/imageView1"
            android:src="@drawable/uajy"
            android:layout_marginLeft="-25dp" />

    </RelativeLayout>

</ScrollView>